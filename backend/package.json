{
  "name": "roon-remote-backend",
  "version": "0.0.0",
  "description": "A roon remote running in the browser",
  "main": "index.js",
  "author": "Michael Pfeifer",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "yarn eslint src __tests__ __factories__ --ext .js,.ts",
    "type-check": "tsc --noEmit",
    "dev": "nodemon --exec tsx index.js",
    "test": "yarn type-check && vitest",
    "test:coverage": "yarn type-check && vitest run --coverage",
    "debug": "nodemon --inspect --exec tsx index.js",
    "debug-break": "nodemon --inspect-brk --exec tsx index.js",
    "migrate:latest": "node --import tsx ./node_modules/.bin/knex migrate:latest",
    "migrate:rollback": "node --import tsx ./node_modules/.bin/knex migrate:rollback",
    "migrate:make": "node --import tsx ./node_modules/.bin/knex migrate:make",
    "migrate:status": "node --import tsx ./node_modules/.bin/knex migrate:status"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.2",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "express": "^4.21.1",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "neverthrow": "^8.2.0",
    "node-roon-api": "github:roonlabs/node-roon-api",
    "node-roon-api-browse": "github:roonlabs/node-roon-api-browse",
    "node-roon-api-status": "github:roonlabs/node-roon-api-status",
    "node-roon-api-transport": "github:roonlabs/node-roon-api-transport",
    "socket.io": "^4.8.0",
    "typescript-language-server": "^5.1.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.19",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^16.5.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "yarn@4.5.1"
}
